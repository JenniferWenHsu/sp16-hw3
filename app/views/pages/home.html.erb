<h1> Users </h1>

<table>
	<h3> Users: </h3>
	<tr>
		<td> Username </td>
		<td> Email </td>
		<td> Age </td>
	</tr>
	<% @users.each do |user|%>
		<tr>
			<td><%= user.username   %></td>
			<td><%= user.email   %></td>
			<td><%= user.age   %></td>
		</tr>
	<%end%>
</table>

<table>
	<h3> Cats: </h3>
	<tr>
		<td> Name </td>
	</tr>
	<% @cats.each do |cat|%>
		<tr>
			<td><%= cat.name%></td>
		</tr>
	<%end%>
</table>

<table>
	<h3> Todos: </h3>
	<tr>
		<td> Task </td>
		<td> Finished </td>
	</tr>
	<% @todos.each do |todo|%>
		<tr>
			<td><%= todo.task%></td>
			<td><%= todo.finished%></td>
		</tr>
	<%end%>
</table>
